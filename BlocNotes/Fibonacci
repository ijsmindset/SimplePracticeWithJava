// hi, this code create the suequence of Fibonacci

public class Fibonacci{  // is basic code only display terminal bash  declare de public class 
    public static void main(String[] args){ // declare the main and inside it have to arguments of type String

        int i = 0, a = 0, b = 1, c = 0;  // declare all variables type integer 'int' and declare value 0 for enter others numbers

        System.out.println("Fibonacci with loop for"); // leave in display of text, and example to sequence of Fibonacci with loop 'for' 
        
        for(i = 0; i < 10; i++){
            if(i < 9){
                System.out.print(a + ", ");
            } else {
                System.out.print(a + "... continua la serie de Fibonacci"); 
            }
        
            c = a + b;
            a = b;
            b = c; 
        }
        System.out.println("");
       

        System.out.println("Fibonacci with  loop while");
        i = 0;
        a = 0;
        b = 1;
        c = 0;

        while(i < 10){
            if(i < 9){
                System.out.print(a + ", ");
                c = a + b;
                a = b;
                b = c;
            } else {
                System.out.print(a + "... la serie Fibonacci continua");
                System.out.println("");
            }
            i++;
        }
        i = 0;
        a = 0;
        b = 1;
        c = 0;

        System.out.println("Fibonacci with  loop do-while");
        do{
            if(i < 9){
                System.out.print(a + ", ");
                c = a + b;
                a = b;
                b = c;
            } else {
                System.out.print(a + "... la serie Fibonacci continua");
                System.out.println("");
            }
            i++;
        } while (i < 10);
    }
}
