
package mainapp;

import washprogram.WashProgram;
import java.util.Scanner;

public class WashingMachineMain {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the weight of the laundry (kg): ");
        int weight = scanner.nextInt();

        System.out.print("Enter the type of clothing (1 = white, 2 = colored, 3 = jeans): ");
        int TypeClothing = scanner.nextInt();
        //---create here down an object of WashProgram class for setter and getter demonstration
        WashProgram washProgram = new WashProgram(weight, TypeClothing);
        washProgram.setTypeClothing(3); // Set type to 3 (jeans) for demonstration
        System.out.println("the type of clothing is set to: " + washProgram.getTypeClothing());
        washProgram.CycleCompleted();
    }
}
